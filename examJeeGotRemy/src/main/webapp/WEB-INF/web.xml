<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
	<display-name>Archetype Created Web Application</display-name>

  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>com.examJeeGotRemy.servlets.LoginServlet</servlet-class>
  </servlet>

  <servlet>
  	<servlet-name>ListeEmployeServlet</servlet-name>
  	<servlet-class>com.examJeeGotRemy.servlets.ListeEmployeServlet</servlet-class>
  </servlet>

  <servlet>
  	<servlet-name>AdminListeEmployeServlet</servlet-name>
  	<servlet-class>com.examJeeGotRemy.servlets.AdminListeEmployeServlet</servlet-class>
  </servlet>

  <servlet>
  	<servlet-name>DetailEmployeServlet</servlet-name>
  	<servlet-class>com.examJeeGotRemy.servlets.DetailEmployeServlet</servlet-class>
  </servlet>

  <servlet>
  	<servlet-name>AdminEmployeUpdateServlet</servlet-name>
  	<servlet-class>com.examJeeGotRemy.servlets.AdminEmployeUpdateServlet</servlet-class>
  </servlet>

  <servlet>
  	<servlet-name>AdminEmployeDeleteServlet</servlet-name>
  	<servlet-class>com.examJeeGotRemy.servlets.AdminEmployeDeleteServlet</servlet-class>
  </servlet>

  <servlet>
  	<servlet-name>LogoutServlet</servlet-name>
  	<servlet-class>com.examJeeGotRemy.servlets.LogoutServlet</servlet-class>
  </servlet>

  <servlet>
  	<servlet-name>AdminEmployeAddServlet</servlet-name>
  	<servlet-class>com.examJeeGotRemy.servlets.AdminEmployeAddServlet</servlet-class>

     <multipart-config>
      <max-file-size>10485760</max-file-size>
      <max-request-size>20971520</max-request-size>
      <file-size-threshold>5242880</file-size-threshold>
    </multipart-config>

  </servlet>

  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/loginServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
  	<servlet-name>ListeEmployeServlet</servlet-name>
  	<url-pattern>/listeEmployeServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
  	<servlet-name>AdminListeEmployeServlet</servlet-name>
  	<url-pattern>/adminListeEmployeServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
  	<servlet-name>DetailEmployeServlet</servlet-name>
  	<url-pattern>/detailEmployeServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
  	<servlet-name>AdminEmployeUpdateServlet</servlet-name>
  	<url-pattern>/adminEmployeUpdateServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
  	<servlet-name>AdminEmployeDeleteServlet</servlet-name>
  	<url-pattern>/adminEmployeDeleteServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
  	<servlet-name>AdminEmployeAddServlet</servlet-name>
  	<url-pattern>/adminEmployeAddServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LogoutServlet</servlet-name>
  	<url-pattern>/logoutServlet</url-pattern>
  </servlet-mapping>

	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
</web-app>
